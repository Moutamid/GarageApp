<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="26dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit_bold"
            android:gravity="center"
            android:textColor="@color/appColor"
            android:layout_marginTop="14dp"
            android:text="PNEUMATIQUE"
            android:textSize="22dp" />

        <!-- Pneu av taille -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/kanit_bold"
            android:text="Pneu av taille"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pneu_av_taille"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/edit_bg"
            android:fontFamily="@font/kanit_medium"
            android:hint="Entrez la taille du pneu avant"
            android:inputType="text"
            android:padding="13dp" />

        <!-- Usure avant (%) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kanit_bold"
            android:text="Usure avant (%)"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:fontFamily="@font/kanit_medium"
                android:paddingEnd="8dp"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/usure_avant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:padding="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pas OK"
                android:fontFamily="@font/kanit_medium"
                android:paddingStart="8dp"
                android:textSize="16sp" />
        </LinearLayout>



        <!-- Pneu arr taille -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kanit_bold"
            android:text="Pneu arr taille"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pneu_arr_taille"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/edit_bg"
            android:fontFamily="@font/kanit_medium"
            android:hint="Entrez la taille du pneu arrière"
            android:inputType="text"
            android:padding="13dp" />

        <!-- Usure arrière (%) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kanit_bold"
            android:text="Usure arrière (%)"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:fontFamily="@font/kanit_medium"
                android:paddingEnd="8dp"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/usure_arriere"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:padding="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pas OK"
                android:fontFamily="@font/kanit_medium"
                android:paddingStart="8dp"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/appColor"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/kanit_medium"
                android:text="Retour" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="@color/appColor"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/kanit_medium"
                android:text="Suivant" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
